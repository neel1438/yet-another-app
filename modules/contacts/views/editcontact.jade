meta(name="viewport",content="width=device-width ,intial-scale=1.0")
include cssjs
body
  div.container
   div.row
    div.col-md-4
       form(action="/contact/#{contact._id}",class="form-horizontal",method='post',enctype="multipart/form-data")
        fieldset
         legend Edit Contact
         input(type="hidden",name="_method",value="put")
         input.input-lg(type='text',name='name', placeholder='Name',value='#{contact.name}')
         span.help-block Name of the Contact. 
         input.input-lg(type='text',name="place", placeholder='Place',value='#{contact.place}')
         span.help-block Where does the contact live ?. 
         input.input-lg(type='text',name='email', placeholder='Email address',value= "#{contact.email}")
         span.help-block Email ID of the Contact. 
         input.input-lg(type='text',name='phone', placeholder='Phone number',value="#{contact.phone}")
         span.help-block PhoneNumber of the Contact.
         input(type="file",name="Image",value="#{contact.path}")
         input.btn.btn-lg(type='submit',name='add',class="btn-primary", value='Update')
