include cssjs
include navbar
link(href="/stylesheets/settings.css",rel="stylesheet")
script(src="/javascripts/settings.js")
body
 div.container
  div.row
   div.col-md-3
    h2 User Settings
    p Name : #{c.name}
    p Email  : #{c.email}
    form(action="/changepasswd",class="form-horizontal",method='post',id="changepasswd-form",role="form")
      h2 Change Password
      div.form-group
       label.control-label(for="password") Password
       div
        input.form-control(type='password',name='password', placeholder='Password',id="password")
      div.form-group
       label.control-label(for="cpassword" ) Confirm Password
       div
        input.form-control(type='password',name='cpassword', placeholder='Retype Password',id="cpassword")

      div.form-actions
       button.btn.btn-lg(type='submit',class="btn-primary") Update Password
 


