include cssjs
link(rel='stylesheet', href='/stylesheets/showcontact.css')
ul
  li  
    img(src="#{contact.path}" ,alt="image not available!" )
    p Name : 
        strong #{contact.name}
    p Place : #{contact.place}
    p Email : #{contact.email}
    p Phone : #{contact.phone}
form.form-inline(action="/contact/#{contact.name}",method="post")
   input.btn.btn-primary(type='button',onclick='location.href="/contacts"',value="View All") 
   span &nbsp&nbsp;
   input.btn.btn-primary(type='button',onclick='location.href="/contact/#{contact.name}/edit"',value="Edit") 
   span &nbsp&nbsp;
   input(type="hidden",name="_method",value="delete")
   button.btn.btn-danger(type="submit") Delete 
  
